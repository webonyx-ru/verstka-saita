                        img(src="/images/logo-7.jpg" alt="")
                    li
                        img(src="/images/logo-8.jpg" alt="")
                    li
                        img(src="/images/logo-9.jpg" alt="")
                    li
                        img(src="/images/logo-10.jpg" alt="")

    section.callback-section.section.section-light-font
        .uk-container.uk-container-center
            .uk-grid.uk-grid-margin.uk-grid-width-small-1-1.uk-grid-width-medium-1-2(data-uk-grid-margin)
                div
                    form.uk-form.form-transparent
                        .uk-form-row
