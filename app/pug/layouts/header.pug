header.header(data-uk-sticky)
    .uk-container.uk-container-center
        .uk-grid
            .header-mobile-info.uk-width-small-1-1.uk-width-medium-2-3.uk-hidden-large
                ul.uk-navbar-nav
                    a(href="#mobile-nav" data-uk-offcanvas).uk-navbar-toggle
            .header-left.uk-width-small-1-1.uk-width-medium-1-3.uk-hidden-small
                a(href="index.html"): img(src="images/pm-logo.svg").logo
            .header-right.uk-width-small-1-1.uk-width-medium-2-3.uk-clearfix
                nav.uk-navbar.uk-visible-large.uk-float-right
                    ul.uk-navbar-nav
                        a(href="#mobile-nav" data-uk-offcanvas).uk-navbar-toggle.uk-hidden-large
                        li.uk-active: a(href="work-page.html") Работы
                        li(data-uk-dropdown="{mode:'click', pos:'bottom-center'}")
                            a(href="#") УСЛУГИ
                                i.uk-icon-angle-down
                            .uk-dropdown.uk-dropdown-small
                                ul.uk-nav.uk-nav-dropdown
                                    li: a(href="#") Мобильные сайты
                                    li: a(href="#") HTML-вёрстка
                                    li: a(href="#") Адаптация сайта
                                    li: a(href="#") Программирование
                                    li: a(href="#") Стоимость вёрстки сайта
                        li: a(href="about-page.html") О НАС
                        li: a(href="#") ПОЛЕЗНОЕ
                        li: a(href="contacts-page.html") КОНТАКТЫ


#mobile-nav.uk-offcanvas
    .uk-offcanvas-bar
        ul.uk-nav.uk-nav-parent-icon(data-uk-nav)
            li.uk-active: a(href="work-page.html") Работы
            li.uk-parent
                a(href="#") УСЛУГИ
                ul.uk-nav-sub
                    li: a(href="#") Мобильные сайты
                    li: a(href="#") HTML-вёрстка
                    li: a(href="#") Адаптация сайта
                    li: a(href="#") Программирование
                    li: a(href="#") Стоимость вёрстки сайта
            li: a(href="about-page.html") О НАС
            li: a(href="#") ПОЛЕЗНОЕ
            li: a(href="contacts-page.html") КОНТАКТЫ